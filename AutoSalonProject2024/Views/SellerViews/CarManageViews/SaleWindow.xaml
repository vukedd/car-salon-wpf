<Window x:Class="AutoSalonProject2024.Views.SellerViews.CarManageViews.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoSalonProject2024.Views.SellerViews.CarManageViews"
        mc:Ignorable="d"
        Title="SaleWindow" Height="550" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock FontSize="40" Margin="90,-5,0,0">Create Sale</TextBlock>
        <Label FontSize="15" Margin="110,55,20,20">Sale price:</Label>
        <TextBox Margin="-15,-320,0,0"  Height="20" Width="140"></TextBox>
        <Label FontSize="15" Margin="110,115,20,20">Buyer name:</Label>
        <TextBox Margin="-15,-200,0,0"  Height="20" Width="140"></TextBox>
        <Label FontSize="15" Margin="110,175,20,20">Buyer Id number:</Label>
        <TextBox Margin="-15,-80,0,0"  Height="20" Width="140"></TextBox>
        <Button FontSize="15" Height="30" Width="100" Margin="-20,30,0,0">Sell car</Button>
    </Grid>
</Window>
