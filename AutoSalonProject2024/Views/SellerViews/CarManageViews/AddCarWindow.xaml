<Window x:Class="AutoSalonProject2024.Views.SellerViews.CarManageViews.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoSalonProject2024.Views.SellerViews.CarManageViews"
        mc:Ignorable="d"
        Title="AddCarWindow" Height="700" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock FontSize="40" Margin="130,10,100,100">Add new car</TextBlock>
        <Label FontSize="15" Margin="50,70,50,50">Brand:</Label>
        <ComboBox Width="100" Height="30" Margin="0,0,275,440" ItemsSource="{Binding Brands}" DisplayMemberPath="Name" SelectionChanged="ComboBox_SelectionChanged" Name="brandCombo" SelectedItem="{Binding CarBrand}"/>
        <Label FontSize="15" Margin="250,70,50,50">Model:</Label>
        <ComboBox Width="100" Height="30" Margin="125,0,0,440" DisplayMemberPath="Name" IsEnabled="false" Name="modelsCombo" SelectedItem="{Binding CarModel}"/>
        <Label FontSize="15" Margin="50,140,50,50">Year of production:</Label>
        <TextBox Height="25" Width="80" Margin="0,0,295,300" Text="{Binding ProductionYear}"></TextBox>
        <Label FontSize="15" Margin="250,140,50,50">Horse power:</Label>
        <TextBox Height="25" Width="80" Margin="105,0,0,300" Text="{Binding HorsePower}"></TextBox>
        <Label FontSize="15" Margin="50,202,50,50">Purchase date:</Label>
        <DatePicker Width="150" Height="25" Margin="0, 30, 222, 200" SelectedDate="{Binding PurchaseDate}"></DatePicker>
        <Label FontSize="15" Margin="250,202,50,50">Purchase price:</Label>
        <TextBox Height="25" Width="80" Margin="105, 130,0,300" Text="{Binding PurchasePrice}"></TextBox>
        <Label FontSize="15" Margin="50,270,50,50">Sale price:</Label>
        <TextBox Height="25" Width="80" Margin="0, 0,295,36" Text="{Binding SalePrice}"></TextBox>
        <Label FontSize="15" Margin="250,270,50,50">Fuel type:</Label>
        <ComboBox Width="100" Height="30" Margin="120,0,0,30" Name="fuelType" SelectedItem="{Binding FuelType}"></ComboBox>
        <Button Width="100" Height="30" Margin="0,100,0,0" Command="{Binding AddCar}">Submit</Button>
    </Grid>
</Window>
